{
    "openapi": "3.0.1",
    "info": {
        "title": "Medical Scribe Tool",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "https://hereforyou.25rb1jlin0w0.us-south.codeengine.appdomain.cloud"
        }
    ],
    "paths": {
        "/scribe": {
            "post": {
                "operationId": "processMedicalIntake",
                "summary": "Process medical intake",
                "description": "Use this tool whenever a nurse starts a patient intake or a patient describes symptoms. It analyzes the conversation for medical details and creates a legal log.",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "transcript": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}